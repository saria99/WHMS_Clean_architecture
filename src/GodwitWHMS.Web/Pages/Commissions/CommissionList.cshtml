@page
@model GodwitWHMS.Pages.Commissions.CommissionListModel
@{
    Layout = "~/Pages/Shared/Dashmin/_Admin.cshtml";
    var statusMessage = Model.StatusMessage;
    Model.StatusMessage = string.Empty;
}

<div class="row">
    <div class="col-12">
        <div id="Grid"></div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            showStatusMessage('@statusMessage');

            var grid = new ej.grids.Grid({
                height: getDashminGridHeight(),
                dataSource: new ej.data.DataManager({
                    url: '/odata/Commission',
                    adaptor: new ej.data.ODataV4Adaptor()
                }),
                allowFiltering: true,
                allowSorting: true,
                allowSelection: true,
                allowGrouping: true,
                allowTextWrap: true,
                allowResizing: true,
                allowPaging: true,
                allowExcelExport: true,
                filterSettings: { type: 'CheckBox' },
                sortSettings: { columns: [{ field: 'EffectiveDate', direction: 'Descending' }] },
                pageSettings: { currentPage: 1, pageSize: 50, pageSizes: ["10", "20", "50", "100", "200", "All"] },
                selectionSettings: { persistSelection: true, type: 'Single' },
                autoFit: true,
                showColumnMenu: true,
                gridLines: 'Horizontal',
                columns: [
                    { type: 'checkbox', width: 60 },
                    { field: 'Id', isPrimaryKey: true, headerText: 'Id', visible: false },
                    { field: 'EffectiveDate', width: 150, format: 'yyyy-MM-dd HH:mm:ss', textAlign: 'Left', type: 'dateTime' },
                    { field: 'ServiceType', headerText: 'Service Type', width: 150 },
                    { field: 'CommissionPercentage', headerText: 'Commission Percentage', width: 100, format: 'N2', textAlign: 'Right' },
                ],
                toolbar: [
                    'ExcelExport', 'Search',
                    { type: 'Separator' },
                    { text: 'Edit', tooltipText: 'Edit', prefixIcon: 'e-edit', id: 'EditCustom' }
                ],
                beforeDataBound: () => { },
                dataBound: function () {
                    grid.toolbarModule.enableItems(['EditCustom'], false);
                    grid.autoFitColumns(['ServiceType', 'CommissionPercentage', 'EffectiveDate']);
                },
                excelExportComplete: () => { },
                rowSelected: () => {
                    if (grid.getSelectedRecords().length == 1) {
                        grid.toolbarModule.enableItems(['EditCustom'], true);
                    } else {
                        grid.toolbarModule.enableItems(['EditCustom'], false);
                    }
                },
                rowDeselected: () => {
                    if (grid.getSelectedRecords().length == 1) {
                        grid.toolbarModule.enableItems(['EditCustom'], true);
                    } else {
                        grid.toolbarModule.enableItems(['EditCustom'], false);
                    }
                },
                rowSelecting: () => {
                    if (grid.getSelectedRecords().length) {
                        grid.clearSelection();
                    }
                },
                toolbarClick: (args) => {
                    if (args.item.id === 'Grid_excelexport') {
                        grid.excelExport();
                    }

                    if (args.item.id === 'EditCustom') {
                        if (grid.getSelectedRecords().length) {
                            var selectedId = grid.getSelectedRecords()[0].RowGuid;
                            var formUrl = '/Commissions/CommissionForm?rowGuid=' + selectedId + '&action=edit';
                            window.location.href = formUrl;
                        }
                    }
                }
            });

            grid.appendTo('#Grid');
        });
    </script>
}
