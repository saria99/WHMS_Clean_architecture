@page
@model ResetPasswordConfirmationModel
@using GodwitWHMS.Applications.Companies
@inject CompanyService CompanyService
@{
    ViewData["Title"] = "Reset password confirmation";

    var defaultCompany = await CompanyService.GetDefaultCompanyAsync();
    var companyName = defaultCompany?.Name ?? string.Empty;
}

<div class="container-fluid">
    <div class="row h-100 align-items-center justify-content-center" style="min-height: 100vh;">
        <div class="rounded p-4 p-sm-5 my-4 mx-3 bg-light">
            <div class="d-flex align-items-center justify-content-between mb-3">
                <div class="row">
                    <div class="col-md-12 text-center mb-3">
                        <h3 class="text-primary">Reset Password Confirmation</h3>
                        <a asp-area="" asp-page="/Index" class="">
                            <h5 class="text-primary"><i class="fas fa-home me-2"></i>@companyName</h5>
                        </a>
                    </div>
                </div>
            </div>
            <p class="text-center mb-0">Your password has been reset. Please <a asp-page="./Login">click here to log in</a></p>
        </div>
    </div>
</div>
